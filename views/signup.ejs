<% include templates/head %>

<% include templates/navigation %>

<div class="row">
  <div class="col-xs-12 col-md-6">
    <% include templates/errors %>
    <% include templates/infos %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6">
    <form action="/signup" method="post">
      <div class="form-group">
        <label for="username">Username</label>
        <input
        id="username"
        class="form-control"
        type="text"
        pattern="^[a-zA-Z0-9]{4,12}$"
        title="Length between 4 and 12 and should not contain special characters"
        name="username"
        placeholder="username"
        autofocus
        value="<%= formUsername %>"
        required>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input
        id="email"
        class="form-control"
        type="email"
        name="email"
        placeholder="example@example.com"
        autofocus
        value="<%= formEmail %>"
        required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input
        id="password"
        class="form-control"
        pattern="^.{4,12}$"
        title="Length between 4 and 12"
        type="password"
        name="password"
        placeholder="password"
        required>
        <br>
        <input
        id="confirm-password"
        class="form-control"
        pattern="^.{4,12}$"
        title="Length between 4 and 12"
        type="password"
        name="confirmPassword"
        placeholder="confirm password"
        required>
      </div>
      <div class="from-group">
        <hr>
      </div>
      <div class="form-group">
        <button
        type="submit" 
        class="btn btn-primary pull-right">Signup</button>
      </div>
    </form>
  </div>
</div>

<% include templates/foot %>